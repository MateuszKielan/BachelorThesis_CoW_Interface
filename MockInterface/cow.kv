#:kivy 2.3.1
ScreenManager:
    StartingScreen:
    ConverterScreen:

# File Selection Screen
<StartingScreen>:
    name: "start"
    orientation: "vertical"
    padding: 20
    spacing: 10

    canvas.before:
        Color:
            rgb: 1, 1, 1 
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Welcome to CoW Interface"
        color: 0,0,0
        font_size: 25
        pos_hint: {"center_x": 0.5, "y": 0.08}

    Button:
        text: "Select File"
        size_hint: None, None
        size: 200, 50
        pos_hint: {"center_x": 0.5, "y": 0.44}
        on_press: root.select_file()

    Label:
        id: file_path_label
        text: "No File Selected"
        color: 0,0,0
        size_hint_y: None
        height: 40
        pos_hint: {"center_x": 0.5, "y": 0.38}
    
    Button:
        text: "Convert"
        size_hint: None, None
        size: 200, 50
        pos_hint: {"center_x": 0.5, "y": 0.3}
        on_press: root.switch()

# Converter Screen 
<ConverterScreen>:
    name: "converter"
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle
            pos: self.pos
            size: self.size

    # BoxLayout Consisting of 3 main sections: Left, Middle, Right
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 1 

        # Left Section - CSV Preview
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.33 

            canvas.before:
                Color:
                    rgb: 0.83, 0.83, 0.83 # background to light gray
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "CSV Preview"
                font_size: 20
                bold: True
                color: 0, 0, 0
                size_hint_y: None

            BoxLayout:
                id: csv_preview_container
                orientation: "vertical"
                size_hint:1,1
                spacing: 20
            

        # Middle Section - Vocabulary Recommendations
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.33
            canvas.before:
                Color:
                    rgb: 0.9, 0.9, 0.9
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Title panel
            Label:
                text: "Vocabulary Recommender"
                font_size: 40
                bold: True
                color: 0,0,0
                size_hint_y: None

            Widget:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgb: 0.6, 0.6, 0.6
                    Rectangle:
                        pos: self.pos
                        size: self.size

            # Request type choice panel
            BoxLayout:
                size_hint_y: None
                height: 40
                spacing: 10
                padding: [10, 0]
                orientation: 'horizontal'

                Label:
                    text: "Choose request type"
                    color: 0, 0, 0, 1
                    font_size: 20
                    size_hint_x: 0.5
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size

                Button:
                    text: "?"
                    size_hint: None, None
                    size: 30, 30
                    pos_hint: {"center_y": 0.5}
                    on_press: root.show_request_help_popup()

            Widget:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgb: 0.6, 0.6, 0.6
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Widget:
                size_hint_y: None
                height: 20

            BoxLayout:
                size_hint_y: 0.1
                orientation: 'horizontal'
                spacing: 10
                padding: 10
                id: request_option_panel

            Widget:
                size_hint_y: None
                height: 80

            Widget:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgb: 0.6, 0.6, 0.6
                    Rectangle:
                        pos: self.pos
                        size: self.size


            BoxLayout:
                size_hint_y: None
                height: 40
                spacing: 10
                padding: [10, 0]
                orientation: 'horizontal'

                Label:
                    text: "Vocabulary Recommender Results"
                    color: 0, 0, 0, 1
                    font_size: 20
                    size_hint_x: 0.5
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size

                Button:
                    text: "?"
                    size_hint: None, None
                    size: 30, 30
                    pos_hint: {"center_y": 0.5}
                    on_press: root.show_recommendation_help_popup()
            

            Widget:
                size_hint_y: None
                height: 1
                canvas:
                    Color:
                        rgb: 0.6, 0.6, 0.6
                    Rectangle:
                        pos: self.pos
                        size: self.size

            # Scrollview to prevent overflow
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                BoxLayout:
                    id: vocab_recommender
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 5
                    spacing: 15


        # Right Section - JSON Preview / Editing
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.33
            spacing: 10
            padding: 10

            canvas.before:
                Color:
                    rgb: 0.41, 0.41, 0.41
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "JSON Preview"
                font_size: 20
                bold: True
                size_hint_y: None
                height: 40

            ScrollView:
                size_hint: 1, 1
                bar_width: 10

                BoxLayout:
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height
                    orientation: 'vertical'

                    TextInput:
                        id: json_editor
                        size_hint_y: None
                        height: self.minimum_height
                        text: ""
                        font_size: 14
                        multiline: True
                        readonly: False
                        foreground_color: 0, 0, 0, 1
                        background_color: 1, 1, 1, 1
                        padding: [10, 10]

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                spacing: 20
                pos_hint: {"center_x": 0.5, 'y': 0.2}
                MDRaisedButton:
                    text: 'Save'
                    on_press: root.save_json()
                    size_hint: 0.5, None
                        
                MDRaisedButton:
                    text: 'Convert'
                    on_press: root.convert_json()
                    size_hint: 0.5, None


# Display Full Dataset popup
<DataPopup>
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Csv Preview"
            color: 1,1,1
            size_hint_y: None

        BoxLayout:
            id: popup_data_container 

        MDRaisedButton:
            text: "Close"
            on_press: root.dismiss_popup()
            size_hint: None, None
            size: 300, 50
            pos_hint: {"center_x": 0.5, "y": 0.3}

# Displaying Recommendations Popup  
<RecommendationPopup>
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Recommendations Preview"
            color: 1,1,1
            size_hint_y: 0.1
            font_size: 20

        BoxLayout:
            orientation: "vertical"
            id: popup_recommendations
            size_hint: 1,1

        MDRaisedButton:
            text: "Close"
            on_press: root.dismiss_popup()
            size_hint: None, None
            size: 300, 50
            pos_hint: {"center_x": 0.5, "y": 0.3}